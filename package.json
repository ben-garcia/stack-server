    "husky": ">=1",
    "jest": "^24.9.0",
    "lint-staged": ">=8",
    "nodemon": "^2.0.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
